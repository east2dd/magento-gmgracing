<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart2'); ?>
<?php if($_product->isSaleable()): ?>
    <script language="javascript">
        function decrease_qty(){
            var qty = parseInt(jQuery('#qty').val());
            if(qty>0)
            {
                jQuery('#qty').val(--qty);
            }
        }

        function increase_qty(){
            var qty = parseInt(jQuery('#qty').val());
            jQuery('#qty').val(++qty);

        } 
    </script>


    <div class="add-to-cart">

		<?php if(!$_product->isGrouped()): ?>
            <br/>

            <a href="javascript: void(0); decrease_qty();" class="btn btn-default btn-gmg">-</a>
            <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
            <a href="javascript: void(0); increase_qty();" class="btn btn-default btn-gmg">+</a>

        <?php endif; ?>
        <?php echo $this->getChildHtml('', true, true) ?>
        <p>
            <br/>
            <a href="#" onclick="productAddToCartForm.submit(this)" class="btn btn-default btn-add-to-cart">Add to cart</a>
        </p>
    </div>
<?php endif; ?>