<script>
jQuery(document).ready(function() {
    jQuery('.product').hover(function() {
        jQuery(this).find('#related-hover').show()
    }, function() {
        jQuery(this).find('#related-hover').hide();
    });
});
</script>
<?php if($this->getItems()->getSize()): ?>
<div class="block block-related">
    <div class="block-content">
        <ol class="mini-products-list" id="block-related">
        <?php foreach($this->getItems() as $_item): ?>
            <li class="item">
                <div class="product">
					<div id="related-hover"><?php echo $this->getPriceHtml($_item, true, '-related') ?></div>
                    <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(267,200) ?>" width="267" height="200" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
					
                    <div class="product-details">
                        <p class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></p>
                    </div>
                </div>
            </li>
        <?php endforeach ?>
        </ol>
        <script type="text/javascript">decorateList('block-related', 'none-recursive')</script>
    </div>
</div>
<?php endif ?>
